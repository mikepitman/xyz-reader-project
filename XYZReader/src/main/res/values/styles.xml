<resources>

    <style name="Theme.xyz_reader" parent="@style/Theme.AppCompat.Light.NoActionBar"/>

    <style name="Theme.xyz_reader.detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- style/s for primary line text -->
    <style name="primary_text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

    <!-- style/s for secondary line text -->
    <style name="secondary_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="secondary_line.text">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_primary_color</item>
    </style>

</resources>
